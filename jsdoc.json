{
    "source": {
      "include": ["src"],
      "includePattern": ".js$",
      "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
      "cleverLinks": true,
      "monospaceLinks": true,
      "systemName"            : "Copyist Frontend",
      "theme"                 : "simplex",
      "linenums"              : true,
      "search"                : true 
    },
    "opts": {
      "recurse": true,
      "destination": "./docs/",
      "template": "./node_modules/ink-docstrap/template"
    }
  }